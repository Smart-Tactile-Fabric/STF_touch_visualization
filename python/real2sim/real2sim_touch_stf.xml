<mujoco>
    <compiler angle="radian" meshdir="meshes" autolimits="true" />
    <option timestep="0.01" gravity="0 0 -9.81" integrator="implicitfast" />

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>

    <worldbody>

        <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
        <light directional="true" ambient=".3 .3 .3" pos="30 30 30" dir="0 -.5 -1" diffuse=".5 .5 .5" specular=".5 .5 .5" />

        <body name="touch_pad_stf" pos="0 0 0.1">
<!--            <geom name="touch_base_stf" type="box" pos="0.14 0.14 0" size="0.15 0.15 0.01" rgba="0.15 0.15 0.15 1" />-->
            <replicate count="16" offset="0.0 0.02 0.0">
                <replicate count="16" offset="0.02 0.0 0.0">
                    <body pos="0 0 0.012" gravcomp="1">
                        <geom type="box" size="0.01 0.01 0.002" rgba="0.5 0.3 0.2 0.0" mass="0"/>
                        <site name="touch_point_stf" pos="0 0 0" rgba="0.2 0.2 0.2 0"/>
                    </body>
                </replicate>
            </replicate>
        </body>

        <include file="generated_objects.xml"/>

    </worldbody>

    <sensor>
        <force name="touch_point_stf" site="touch_point_stf" />
    </sensor>

    <include file="actuator_generated.xml"/>

</mujoco>
